{
  "name": "codelens-translator",
  "version": "1.0.0",
  "description": "AI-powered code explanations using Mistral language model",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:renderer\" \"npm run build:main\" \"wait-on dist/renderer.js && electron .\"",
    "build:renderer": "tsc -p tsconfig.renderer.json && webpack --mode development",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "demo": "node scripts/demo.js",
    "setup": "bash scripts/setup.sh",
    "setup:win": "scripts\\setup.bat"
  },
  "keywords": [
    "electron",
    "ai",
    "code",
    "explanation",
    "mistral",
    "ollama"
  ],
  "author": "CodeLens Translator Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.0.0",
    "css-loader": "^6.8.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.codelens.translator",
    "productName": "CodeLens Translator",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
